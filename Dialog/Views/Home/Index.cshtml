@{
  Layout = "_Layout";
}

@using Dialog.Models;

@if (Model.Count < 1) {
  <h2>No Topics</h2>
}
else
{
  foreach(Topic topic in Model)
  {
    <div class = "topic-button">
      <a href="/topics/@topic.Id/0">@topic.Name</a>
    </div>
  }
}

<form action="/topics/new" method="post">
  <div class="form-group">
    <h3 class = "text-center">Add Topic</h3>
    <input type="text" class="form-control" name="topic-name" id="topic-name" required>
  </div>
  <button type="submit" class="btn btn-default btn-wide">Confirm</button>
</form>
