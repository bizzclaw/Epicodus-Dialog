<div class="form-group">
  <h3 class = "text-center">Subject</h3>
  <input type="text" class="form-control" name="post-subject" id="post-subject" required>
</div>

<div class="form-group">
  <h3 class = "text-center">Post</h3>
  <input type="text" class="form-control" name="post-message" id="post-message" required>
</div>

<div class="form-group">
  <h3 class = "text-center">Author</h3>
  <input type="text" class="form-control" name="post-author" id="post-author" value="Anonymous">
</div>

<div class="form-group">
  <h3 class = "text-center">Avatar (Optional)</h3>
  <input type="text" class="form-control" name="post-avatar" id="post-avatar">
</div>
