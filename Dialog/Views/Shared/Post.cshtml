<div class="form-group">
  @* <h3 class = "text-center">Avatar (Optional)</h3> *@
  <input type="text" class="form-control" name="post-avatar" id="post-avatar" placeholder="Enter url for your avatar image">
</div>

<div class="form-group">
  @* <h3 class = "text-center">Subject</h3> *@
  <input type="text" class="form-control" name="post-subject" id="post-subject" required placeholder="Subject">
</div>

<div class="form-group">
  @* <h3 class = "text-center">Author</h3> *@
  <input type="text" class="form-control" name="post-author" id="post-author" placeholder="Your Name">
</div>

<div class="form-group" id="text-area">
  @* <h3 class = "text-center">Post</h3> *@
  <textarea  placeholder="Type your message here" type="text" class="form-control" name="post-message" id="post-message" required></textarea>
</div>
